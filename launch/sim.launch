<launch>
    <!-- Set TurtleBot3 Model -->
    <arg name="turtlebot3_model" default="waffle" />
    <env name="TURTLEBOT3_MODEL" value="$(arg turtlebot3_model)" />

    <!-- Load Gazebo World -->
    <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <!-- DA MODIFICARE IN BASE ALLA POSIZIONE -->
        <arg name="world_name" default="$(find simple_traj)/world/FinalWorld/FinalWorld1_0.world" />
        <arg name="paused" value="false"/>
        <arg name="use_sim_time" value="true"/>
        <arg name="gui" value="true"/>
        <arg name="physics" value="ode"/>
        <arg name="headless" value="false"/>
        <arg name="debug" value="false"/> 
    </include>

    <!-- Upload TurtleBot3 URDF -->
    <param name="robot_description" command="$(find xacro)/xacro '$(find turtlebot3_description)/urdf/turtlebot3_$(arg turtlebot3_model).urdf.xacro'" />

    <node pkg="gazebo_ros" type="spawn_model" name="spawn_urdf" args="-urdf -model turtlebot3_$(arg turtlebot3_model) -x 0.0 -y 0.0 -z 0.1 -param robot_description" />

    <!-- Robot state publisher -->
    <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" output="screen"/>

</launch>
